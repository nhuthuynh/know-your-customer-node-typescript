{
    "compilerOptions": {
        "strict": true,
        "target": "es2018",
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "importHelpers": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strictFunctionTypes": false,
        "sourceMap": true,
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "~/*": [
                "./src/*"
            ]
        },
        "lib": [
            "esnext",
            "esnext.asynciterable",
            "dom"
        ],
        "types": [
            "@types/node",
        ],
        "typeRoots": [
            "./src/typings"
        ]
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "public"
    ]
}
