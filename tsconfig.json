{
    "compilerOptions": {
        "strict": true,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "importHelpers": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strictFunctionTypes": false,
        "sourceMap": true,
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "~/*": [
                "./src/*"
            ]
        },
        "types": [
            "@types/node",
            "reflect-metadata",
            "jest"
        ],
        "typeRoots": ["./node_modules/@types"],
        "lib": [
            "esnext",
            "es6",
            "dom"
        ],
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.test.ts",
    ],
    "exclude": [
        "node_modules",
        "public"
    ]
}
